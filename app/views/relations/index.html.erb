<h2>User Categories</h2>

<br/>

<table class="table table-striped table-condensed table-hover table-responsive" style="width: 90%">
  <tr>
    <th>Name</th>
    <th>Description</th> 
    <th>Admin Only?</th>
    <th>Actions</th>
  </tr>
  <% @relations.each do |relation| %>
      <tr>
        <td style="width: 150px; valign="top";>
          <strong><%= relation.name %></strong>
        </td>
    	  <td>
    	    <%= relation.description %>
    	  </td>
        <td>
          <%= relation.admin_only.to_s.capitalize  %>
        </td>
        <td>
          <% if !relation.disabled? %>
            <%= button_to "Edit", edit_relation_path(relation), :method => "get", class: "btn btn-xs btn-success" %>
            <%= button_to "Delete", relation_path(relation), :method => "delete", data: {confirm: 'Are you sure?'},class: "btn btn-xs btn-danger" %>
          <% end %>
        </td>
  	  </tr>
  <% end %>
</table>

<p>
  <%= button_to "Add Category", new_relation_path(), :method => "get", class: "btn btn-primary" %>
</p>