<h2>Accounts</h2>

<br/>

<table class="table table-striped table-condensed table-hover table-responsive">
  <tr>
    <th>Name</th>
    <th>Email</th> 
    <th>Relation</th>
    <th>Privilege</th>
  </tr>
  <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to(user.name,user) %>
        </td>
        <td>
          <%= mail_to user.email %>
        </td>
        <td>
          <%= user.relation || "Unknown" %>
        </td>
        <td>
          <%= user.admin_s %>
        </td>
      </tr>
  <% end %>
</table>