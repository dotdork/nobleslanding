<%= form_for(@checklist) do |f| %>
  <%= render "shared/errors", error_item: @checklist %>
  <p>
    <%= f.label(:name, "Checklist Name") %><br/>
    <%= f.text_field(:name, autofocus: true) %>
  </p>
  <p>
    <%= f.label(:description, "Checklist Description") %><br/>
    <%= f.text_area(:description,cols: 40,rows: 3) %>
  </p>
  <div style="float: left; width: auto; padding-right: 5px">
    <%= f.submit(class: "btn btn-primary") %>
  </div>
<% end %>