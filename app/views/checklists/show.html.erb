<h2><%= @checklist.name %></h2>

<h3>
  <%= @checklist.description %>
</h3>

<table class="table table-striped table-condensed table-hover table-responsive" style="width: 80%">
<% @items.each do |item| %>
    <tr>
      <td style="width: 25px;">
          <input type="checkbox">
      </td>
      <td>
        <% item_value = "<strong>#{item.name.capitalize}</strong> - #{item.description.capitalize}" %>
        <%= item_value.html_safe %>
      </td>
    </tr>
<% end %>
</table>
        

<br/>
<% if current_user_admin? %>
  <p>
  <%= button_to "Edit List", edit_checklist_path, :method => "get", class: "btn btn-primary" %>
  <%= button_to "Delete", checklist_path, :method => "delete", data: {confirm: 'Are you sure?'},class: "btn btn-danger" %>
  </p>
<% end %>
